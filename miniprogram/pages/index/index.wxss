.page-container {
  display: flex;
  flex-direction: column;
  height: 80vh; /* 占满整个屏幕高度 */
  justify-content: flex-end; /* 子元素对齐到末尾 */
}
.cover{
  background-color: #861616;
  text-align: center;
  padding:80rpx;
}

.logo{
  width: 160rpx;
  height: 160rpx;
}
.content {
  flex: 1; /* 让内容区域占据除了底部容器之外的所有空间 */
}
.title{
  font-weight: 700;
  columns: #000000;
  font-size: 50rpx;
  margin:16rpx 32rpx;
}
.introduce{
 margin-left:10%;
 margin-right:10%;
 font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
 font-weight: 500;
}
.text{
  font-weight: 800;
  color: #1b9fa8;
  font-size: 40rpx;
}
